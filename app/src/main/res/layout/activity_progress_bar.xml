<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:contentPadding="25dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:alpha="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:weightSum="15">

            <!--    Progress 1     -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:clipChildren="false"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">
                <ProgressBar
                    android:id="@+id/progress1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:background="@drawable/drawable_circle_grey_empty"
                    android:progressDrawable="@drawable/drawable_circle_mix_blue_filled"
                    android:rotation="90" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_remaining1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="117"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorMixBlue"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_total1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 250"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkGray"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active Officers"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <!--    Progress 1  ends   -->



            <!--    Progress 2     -->
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginRight="5dp"
            android:clipChildren="false"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">
                    <ProgressBar
                        android:id="@+id/progress2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:background="@drawable/drawable_circle_grey_empty"
                        android:progressDrawable="@drawable/drawable_circle_violet_filled"
                        android:rotation="90" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/tv_remaining2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="234"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorViolet"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_total2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="of 300"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorDarkGray"/>
                    </LinearLayout>
                </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/black" />
        </LinearLayout>
            <!--    Progress 2  ends   -->




            <!--    Progress 3     -->
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:clipChildren="false"
            android:layout_margin="5dp"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">
                <ProgressBar
                    android:id="@+id/progress3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:background="@drawable/drawable_circle_grey_empty"
                    android:progressDrawable="@drawable/drawable_circle_orange_filled"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_remaining3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="93"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_total3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 289"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkGray"/>
                </LinearLayout>

                </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Completed"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/black"/>

        </LinearLayout>
            <!--    Progress 2   ends  -->

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_commit">

        <EditText
            android:id="@+id/et_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextMinute1"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:hint="total"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:minEms="5"
            android:textColor="@color/colorYellow"
            android:textColorHint="@color/colorYellow" />

        <EditText
            android:id="@+id/et_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:hint="remaining"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:minEms="5"
            android:textColor="@color/colorYellow"
            android:textColorHint="@color/colorYellow" />
    </LinearLayout>





    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="commit"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
